<div class="box">
    <div class="box-header">
        <h3 class="box-title">Liste des Patients</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <table id="example1" class="table table-bordered table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.firstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.lastName)
                        </th>
                        <th></th>
                    </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="danger">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td class="danger">
                            @Html.DisplayFor(modelItem => item.firstName)
                        </td>
                        <td class="danger">
                            @Html.DisplayFor(modelItem => item.lastName)
                        </td>
                        <td class="danger">
                            @*@Html.DisplayFor(modelItem => item.Id, new { @id = "id"})*@
                            @Html.Hidden("RedirectTo", Url.Action("Create", "MedicalPath"), new { id = item.Id })
                        </td>


                        <td class="danger">

                            @Html.ActionLink("AjouterParcour", "AjouterParcour", new { id = item.Id })
                        </td>
                        <td class="danger">

                            @Html.ActionLink("AfficherParcour", "AfficherParcour", new { id = item.Id })
                        </td>

                        <td class="danger">

                            @Html.ActionLink("AjouterTretement", "AddTretement", new { id = item.Id })
                        </td>
                        <td class="danger">

                            @Html.ActionLink("AfficherTretement", "AfficherTretement", new { id = item.Id })
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div><!-- /.box-body -->
</div><!-- /.box -->
