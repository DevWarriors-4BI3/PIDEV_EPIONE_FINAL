@model IEnumerable<Domain.Patient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDoctorSpace.cshtml";
}




<h2>Liste des Patients</h2>



@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                <div> Serach Patient : @Html.TextBox("searchString")    </div>
            </td>

            <td>
                <input type="submit" value="Search" id="submit" />
            </td>
        </tr>
    </table>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
          @*@Html.DisplayFor(modelItem => item.Id, new { @id = "id"})*@
            @Html.Hidden("RedirectTo", Url.Action("Create", "MedicalPath"), new { id = item.Id })
        </td>
     
     
        <td>
           
            @Html.ActionLink("AjouterParcour", "AjouterParcour", new { id = item.Id })
        </td>
        <td>

            @Html.ActionLink("AfficherParcour", "AfficherParcour", new { id = item.Id })
        </td>
       
        <td>
           
            @Html.ActionLink("AjouterTretement", "AddTretement", new { id = item.Id })
        </td>
        <td>

            @Html.ActionLink("AfficherTretement", "AfficherTretement", new { id = item.Id })
        </td>
    
    </tr>
}
   
</table>


          


